<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the FIFA16 Boys Community</h1>

    <h2>
      This is by far the most hilarious fifa community on planet earth. Get ready to be Entertained!
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= image_tag("fifa2.png", :alt => "fifa 16") %>
<% end %>
